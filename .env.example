# ================================
# 🔧 Luckia Chat - Environment Variables
# Copy to .env and customize values
# ================================

# 🤖 Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
# OLLAMA_BASE_URL=http://localhost:11434  # For local development
# OLLAMA_BASE_URL=http://192.168.1.206:11434  # For external Ollama server

# 🗂️ Application Paths
AREA_CONFIG_PATH=./backend/config/area_config.json

# 🔐 Security
SESSION_SECRET=your-super-secret-key-change-in-production-please
JWT_SECRET=another-super-secret-key-for-jwt-tokens

# 🌐 Network Configuration
FRONTEND_PORT=80
BACKEND_PORT=3001
DOMAIN=localhost
# DOMAIN=chat.luckia.com  # For production

# 📊 Monitoring (Optional)
PROMETHEUS_PORT=9090
ENABLE_MONITORING=false

# 🐳 EasyPanel Specific
EASYPANEL_PROJECT_NAME=luckia-chat
EASYPANEL_ENVIRONMENT=production

# 📈 Future Qdrant Configuration (FASE 5)
# QDRANT_URL=http://192.168.1.206:6333
# QDRANT_API_KEY=your-qdrant-api-key
# VECTOR_COLLECTION_NAME=luckia-documents

# 🔍 Development Settings
NODE_ENV=production
LOG_LEVEL=info
# LOG_LEVEL=debug  # For development

# 🗄️ Database (for future PostgreSQL migration)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=luckia_chat
# DB_USER=luckia
# DB_PASSWORD=secure-password